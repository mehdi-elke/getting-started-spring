<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Définition du bean pour le repository -->
    <bean id="bookRepository" class="fr.baretto.library.repository.InMemoryBookRepository" />

    <!-- Définition du bean pour le service -->
    <bean id="bookService" class="fr.baretto.library.service.BookServiceImpl">
        <property name="bookRepository" ref="bookRepository" />
    </bean>
</beans>